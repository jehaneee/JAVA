import java.util.Scanner; 
public class aehg {
		    public static void main(String[] args) {
		        
		    double A,B,C,D;
            Scanner input=new Scanner(System.in);
		    System.out.print("Enter 25%: ");
            A = input.nextDouble();
		    System.out.print("Enter 25%: ");
		    B = input.nextDouble();
		    System.out.print("Enter 30%: ");
		    C = input.nextDouble();
		    System.out.print("Enter 20%: ");
		    D = input.nextDouble();
		    
		    double total=A+B+C+D;
		    System.out.println("Avgis: "+total);
		    
		}

}
